<h1 class="formTitle">Создать задачу</h1>
<form action="/todos/new" method="post" class="taskForm">
    <input type="text" name="title" placeholder="Название задачи" class="taskInput" required />

    <div class="radioGroup">
        <label class="radioLabel">
            <input type="radio" name="completed" value="true" class="taskRadio" /> Completed
        </label>
        <label class="radioLabel">
            <input type="radio" name="completed" value="false" class="taskRadio" /> Not completed
        </label>
    </div>

    <button type="submit" class="taskButton">Создать</button>
</form>
